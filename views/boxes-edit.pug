extends layout.pug

include utils.pug

block content
  h1=box.name
    form(action=`/boxes/delete-box` method='post')
      input(type='hidden' name='boxId' value=boxId)
      button(type='submit') Delete this recipe box
  h2 Recipes
  if recipes && recipes.length
    div
      each recipe in recipes
        div
          a(href=`/recipes/${recipeId}`)=recipe.name
  a(href='/boxes/#{boxId}' class='btn') Cancel
