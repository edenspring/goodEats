extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  p Enter a name for your new recipe and click Get Started!
  form(action='/recipes/new' method='post')
    +field('Recipe Name: ', 'name', recipe.name)
    div
      button(type='submit' class='btn') Get Started
  a(href='/' class='btn') Cancel
