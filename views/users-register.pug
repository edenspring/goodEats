extends layout.pug
include utils.pug

block content
  +validationErrorSummary(errors)
  form(method="post" action="/user/register")
    input(type="hidden" name="_csrf" value=csrfToken)
    +field("Username", "username", user.username)
    +field("Email Address", "email", user.email)
    +field("Password", "password", user.password)
    +field("Confirm Password", "confirmPassword", user.confirmPassword)
    button(type="submit" class="submitButton") Submit
